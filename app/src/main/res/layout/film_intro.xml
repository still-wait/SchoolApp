<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/film_image"
            android:layout_width="80dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/fab_label_background"/>

        <TextView
            android:id="@+id/film_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_image"
            android:hint="电影名称"
            android:textSize="15sp"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/film_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_image"
            android:layout_below="@id/film_name"
            android:hint="电影类型" />

        <TextView
            android:id="@+id/film_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_image"
            android:layout_below="@id/film_type"
            android:maxLines="1"
            android:hint="主演" />

        <TextView
            android:id="@+id/film_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/film_image"
            android:layout_below="@id/film_actor"
            android:maxLines="2"
            android:hint="剧情简介" />
    </RelativeLayout>
</LinearLayout>
